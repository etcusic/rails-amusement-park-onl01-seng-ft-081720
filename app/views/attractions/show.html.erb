<ul>
    <li>Name: <%= @attraction.name %></li>
    <li>Tickets: <%= @attraction.tickets %></li>
    <li>Nausea Rating: <%= @attraction.nausea_rating %></li>
    <li>Happiness Rating: <%= @attraction.happiness_rating %></li>
    <li>Minimum Height: <%= @attraction.min_height %></li>
</ul>


<%= form_tag("/rides", method: :post) do %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag "Go on this ride"%>
<% end %>

<% if @user.admin %>
    <h2><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></h2>
<% end %>